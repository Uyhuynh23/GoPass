# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-email-password
MAIL_FROM=noreply@gopass.com

# AI Scoring Service
AI_SCORING_API_URL=http://localhost:8000/api/score
AI_SCORING_API_KEY=your-ai-api-key

# VnSocial API Configuration
# Option 1: Sử dụng username/password để tự động login
VNSOCIAL_USERNAME=your-vnsocial-username
VNSOCIAL_PASSWORD=your-vnsocial-password

# Option 2: Sử dụng token cố định (bỏ qua login)
# Nếu có VNSOCIAL_TOKEN thì sẽ dùng token này thay vì login
# Token này có thời hạn ~30 ngày, cần update khi hết hạn
# VNSOCIAL_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Client URL (for reset password links)
CLIENT_URL=http://localhost:3000
